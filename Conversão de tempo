#include <stdio.h>
 
int main() {
    
    int tempoemsegundos;
    int segundos, minutos, horas;
    
    scanf ("%d", &tempoemsegundos);
    
    horas = tempoemsegundos /3600;
    minutos = (tempoemsegundos % 3600) /60;
    segundos = tempoemsegundos % 60;
    
    printf ("%d:%d:%d\n", horas, minutos, segundos);
    
    return 0;
}
